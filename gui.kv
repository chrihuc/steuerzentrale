<OpScreen>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Keller'
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'media/UG.png'
    TabbedPanelItem:
        text: 'EG'
        id: EG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'media/EG.png'
            LichtButton:
                pos_hint: {'center_x': .5, 'center_y': .25}
                on_press: root.licht_button_pop_up('V00KUE1DEK1LI01')
            TemperaturLabel:
                pos_hint: {'center_x': .05, 'center_y': .6}
                id: A00TER1GEN1TE01
                hks: 'A00TER1GEN1TE01'
            CO2Label:
                pos_hint: {'center_x': .4, 'center_y': .6}
                id: V00WOH1RUM1CO01                
            TemperaturLabel:
                pos_hint: {'center_x': .2, 'center_y': .8}
                id: V00WOH1RUM1TE01 
                hks: 'V00WOH1RUM1TE02'
            TemperaturLabel:
                pos_hint: {'center_x': .7, 'center_y': .3}
                id: V00KUE1RUM1TE02  
                hks: 'V00KUE1RUM1TE02'                 
    TabbedPanelItem:
        text: '1.Stock'
        id: OG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'media/OG.png'
            TemperaturLabel:
                pos_hint: {'center_x': .8, 'center_y': .35}
                id: V01SCH1RUM1TE01
                hks: 'V01SCH1RUM1TE01'
            TemperaturLabel:
                pos_hint: {'center_x': .8, 'center_y': .6}
                id: V01BAD1RUM1TE01
                hks: 'V01BAD1RUM1TE01'
            TemperaturLabel:
                pos_hint: {'center_x': .3, 'center_y': .8}
                id: V01KID1RUM1TE01  
                hks: 'V01KID1RUM1TE01'                   
    TabbedPanelItem:
        text: '2.Stock'
        id: DG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'media/DG.png' 
            TemperaturLabel:
                pos_hint: {'center_x': .8, 'center_y': .6}
                id: V02ZIM1RUM1TE02
                hks: 'V02ZIM1RUM1TE02'
    TabbedPanelItem:
        text: 'Wecker' 
    TabbedPanelItem:
        text: 'Zeitschaltuhr'        
    TabbedPanelItem:
        text: 'Kamera' 
        id: Kamera
        BoxLayout:
            BoxLayout:
                id: KamBox
                size_hint: 0.75, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.25, 1
                id: TabPanIt
                Button:
                    text: 'Refresh'
                    on_press: root.update_webcam()    
                Button:
                    text: 'Play'
                    on_press: root.play_webcam() 
                Button:
                    text: 'Stop' 
                    on_press: root.stop_webcam() 
    TabbedPanelItem:
        text: 'Szenen'
    TabbedPanelItem:
        text: 'Settings'
        GridLayout:
            cols: 2
            ToggleButton:
                id: KlingelAn
                text: 'AutoAn Klingel'
                on_press: root.change_setting('KlingelAn')
            ToggleButton:
                id: Feh
                text: 'Zeige Bilder'
                on_press: root.change_setting('Feh')
            ToggleButton:
                id: KS
                text: 'KommandoStation'
                on_press: root.change_setting('KS')  
            ToggleButton:
                id: Exit
                text: 'Exit'
                on_press: root.close_gui()                  
    TabbedPanelItem:
        text: 'System'
        GridLayout:
            rows: 2
            Label:
                text: str(slider_id.value)
            Slider:
                id: slider_id
        
<TemperaturLabel>:
    size_hint: None, None
    size: 80, 30
    text: u'NN degC'
    hks: 'Vm1'
    on_press: root.pop_up(root.hks)
    canvas.before:
        Color:
            rgb: 0, 0, 0 # your color here
        Rectangle:
            pos: self.pos
            size: self.size         

<CO2Label>:
    size_hint: None, None
    size: 70, 22
    text: u'[ref=A00TER1GEN1TE01]NN[/ref]'
    markup: True
    on_ref_press: root.pop_up(id)
    canvas.before:
        Color:
            rgb: 0, 0, 0 # your color here
        Rectangle:
            pos: self.pos
            size: self.size
            
<LichtButton>:
    id: selber
    size_hint: 0.15, 0.1
    background_normal: 'bulb2.png'