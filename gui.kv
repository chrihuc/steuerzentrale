<OpScreen>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Keller'
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'UG.png'
    TabbedPanelItem:
        text: 'EG'
        id: EG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'EG.png'
            LichtButton:
                pos_hint: {'center_x': .5, 'center_y': .25}
                on_press: root.licht_button_pop_up('V00KUE1DEK1LI01')
            TemperaturLabel:
                pos_hint: {'center_x': .05, 'center_y': .6}
                id: A00TER1GEN1TE01
    TabbedPanelItem:
        text: '1.Stock'
        id: OG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'OG.png'
    TabbedPanelItem:
        text: '2.Stock'
        id: DG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'DG.png'        
    TabbedPanelItem:
        text: 'Wecker' 
    TabbedPanelItem:
        text: 'Zeitschaltuhr'        
    TabbedPanelItem:
        text: 'Kamera' 
        id: Kamera
        BoxLayout:
            BoxLayout:
                id: KamBox
                size_hint: 0.75, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.25, 1
                id: TabPanIt
                Button:
                    text: 'Refresh'
                    on_press: root.update_webcam()    
                Button:
                    text: 'Play'
                    on_press: root.play_webcam() 
                Button:
                    text: 'Stop' 
                    on_press: root.stop_webcam() 
    TabbedPanelItem:
        text: 'Szenen'
    TabbedPanelItem:
        text: 'Settings'
        GridLayout:
            cols: 2
            ToggleButton:
                id: KlingelAn
                text: 'AutoAn Klingel'
                on_press: root.change_setting('KlingelAn')
            ToggleButton:
                id: Feh
                text: 'Zeige Bilder'
                on_press: root.change_setting('Feh')
            ToggleButton:
                id: KS
                text: 'KommandoStation'
                on_press: root.change_setting('KS')  
            ToggleButton:
                id: Exit
                text: 'Exit'
                on_press: root.close_gui()                  
        
<TemperaturLabel>:
    size_hint: None, None
    size: 70, 22
    text: u'[ref=A00TER1GEN1TE01]NN degC[/ref]'
    markup: True
    on_ref_press: root.pop_up(id)
    canvas.before:
        Color:
            rgb: 0, 0, 0 # your color here
        Rectangle:
            pos: self.pos
            size: self.size         
            
<LichtButton>:
    id: selber
    size_hint: 0.15, 0.1
    background_normal: 'bulb2.png'