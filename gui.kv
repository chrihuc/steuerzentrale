<OpScreen>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Keller'
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'UG.png'
            Button:
                text: 'Licht'
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: root.slideshow()
                background_normal: 'bulb.png'
    TabbedPanelItem:
        text: 'EG'
        id: EG
        FloatLayout:
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size            
                    source: 'EG.png'
            LichtButton:
                pos_hint: {'center_x': .85, 'center_y': .8}
                id: V00WOH1DEK1LI01
            TemperaturLabel:
                pos_hint: {'center_x': .05, 'center_y': .6}
                id: A00TER1GEN1TE01
    TabbedPanelItem:
        text: '1.Stock'
        RstDocument:
            text:
                '\\n'.join(("Hello world", "-----------",
                "You are in the third tab."))
    TabbedPanelItem:
        text: '2.Stock'
    TabbedPanelItem:
        text: 'Wecker' 
    TabbedPanelItem:
        text: 'Zeitschaltuhr'        
    TabbedPanelItem:
        text: 'Kamera' 
        id: Kamera
        BoxLayout:
            BoxLayout:
                id: KamBox
                size_hint: 0.75, 1
            BoxLayout:
                size_hint: 0.25, 1
                id: TabPanIt
                Button:
                    text: 'Refresh'
                    on_press: root.update_webcam()    
                Button:
                    text: 'Play'
                    on_press: root.play_webcam() 
                Button:
                    text: 'Stop' 
                    on_press: root.stop_webcam() 
    TabbedPanelItem:
        text: 'Szenen'
        ScrollView:
            text: 'ScrollView'
    TabbedPanelItem:
        text: 'Settings'
        BoxLayout:
            ToggleButton:
                id: KlingelAn
                text: 'AutoAn Klingel'
                on_press: root.change_setting('KlingelAn')
            ToggleButton:
                id: Feh
                text: 'Zeige Bilder'
                on_press: root.change_setting('Feh')
        
<TemperaturLabel>:
    size_hint: None, None
    size: 70, 22
    text: u'[ref=A00TER1GEN1TE01]NN degC[/ref]'
    markup: True
    on_ref_press: root.pop_up()    
    canvas.before:
        Color:
            rgb: 0, 0, 0 # your color here
        Rectangle:
            pos: self.pos
            size: self.size         
            
<LichtButton>:
    size_hint: 0.2, 0.2
    on_press: root.pop_up()
    background_normal: 'bulb2.png'
    